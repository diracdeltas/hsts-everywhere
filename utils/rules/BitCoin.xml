<ruleset name="Bitcoin" default_off="self-signed">
  <target host="www.bitcoin.org" />
  <target host="bitcoin.org" />
  <target host="forum.bitcoin.org" />

  <rule from="^http://(?:www\.)?bitcoin\.org/" to="https://www.bitcoin.org/" />
  <rule from="^http://(forum)\.bitcoin\.org/"  to="https://$1.bitcoin.org/" />
</ruleset>
