<ruleset name="Barnes and Noble (redirects)" default_off="redirect loops">
    <target host="bn.com" />
    <target host="*.bn.com" />
	<target host="barnesandnoble.com" />
	<target host="*.barnesandnoble.com" />
		<exclusion pattern="http://www\.barnesandnoble\.com/(?:google/ad\?url=|[sw]/)" />
		<exclusion pattern="^http://www\.barnesandnoble\.com/p/[\w\-]+" />
	<target host="*.imagesbn.com" />


    <rule from="^http://(www\.)?bn\.com/"
        to="https://www.barnesandnoble.com/" />

	<rule from="^http://(?:www\.)?barnesandnoble\.com/"
		to="https://www.barnesandnoble.com/" />

	<!--	s?img[12] appear identical, but copy what
		the server does as closely as is feasible.	-->
	<rule from="^http://s?img([12])\.imagesbn\.com/"
		to="https://simg$1.imagesbn.com/" />

	<!--	simg3 doesn't exist, and unlinke 1 & 2,
		the cert matches img3.	-->
	<rule from="^http://img3\.imagesbn\.com/"
		to="https://img3.imagesbn.com/" />

</ruleset>
