<ruleset name="JustGiving">
	<target host="justgiving.com" />
	<target host="*.justgiving.com" />

	<securecookie host="^(www)?\.justgiving\.com$" name=".*"/>

	<rule from="^(http://(www\.)?|https://)justgiving\.com/" to="https://www.justgiving.com/" />
	<rule from="^http://secure\.justgiving\.com/" to="https://secure.justgiving.com/" />
</ruleset>
