<!--
	Nonfunctional subdomains:

		- ^
		- en
		- www

-->
<ruleset name="adition.com">
	<target host="*.adfarm1.adition.com"/>
	<target host="*.adition.com"/>
		<exclusion pattern="^http://(?:en|www)\.adition\.com/" />
	<target host="ad3.adfarm1.adition.com"/>
	
	<rule from="^http://([a-z0-9-\.]+)\.adition\.com/" to="https://$1.adition.com/"/>
</ruleset>
