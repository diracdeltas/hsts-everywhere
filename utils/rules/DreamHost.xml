<ruleset name="DreamHost (partial)" platform="mixedcontent">
	<target host="dreamhost.com" />
	<target host="discussion.dreamhost.com" />
	<target host="files.dreamhost.com" />
	<target host="gifts.dreamhost.com" />
	<target host="media.dreamhost.com" />
	<target host="panel.dreamhost.com" />
	<target host="signup.dreamhost.com" />
	<target host="webftp.dreamhost.com" />
	<target host="www.dreamhost.com" />

	<securecookie host="^(\.)?(discussion|files|gifts|media|panel|signup|webftp)\.dreamhost\.com$" name=".+" />

	<rule from="^http://(?:www\.)?dreamhost\.com/" to="https://dreamhost.com/" />
	<rule from="^http://(discussion|files|gifts|media|panel|signup|webftp)\.dreamhost\.com/" to="https://$1.dreamhost.com/" />
</ruleset>