<ruleset name="Ciao (partial)">

	<target host="*.ciao.com" />
	<target host="ciao.de" />
	<target host="www.ciao.de" />


	<rule from="^http://de-img([12])\.ciao\.com/"
		to="https://de-img$1.ciao.com/" />

	<rule from="^http://(www\.)?ciao\.de/([\w/]+/css/|favicon\.ico)"
		to="https://$1ciao.de/$1" />

</ruleset>
