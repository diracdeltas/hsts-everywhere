<ruleset name="zagony.ru" default_off="self-signed">

	<target host="zagony.ru"/>
	<target host="www.zagony.ru"/>

	<securecookie host="^zagony\.ru$" name=".*"/>

	<!--	works with and without www, but cut needed
		 exceptions by redirecting to one only.		-->
	<rule from="^http://(?:www\.)?zagony\.ru/"
		to="https://zagony.ru/"/>

</ruleset>
