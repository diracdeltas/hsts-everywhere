<ruleset name="Zen Internet" platform="mixedcontent">

  <target host="zen.co.uk" />
  <target host="*.zen.co.uk" />


	<securecookie host="^(.*\.)?zen\.co\.uk$" name=".*" />


  <rule from="^http://zen\.co\.uk/"
          to="https://www.zen.co.uk/" />

  <rule from="^http://(myaccount|order|portal|webmail|www)\.zen\.co\.uk/"
          to="https://$1.zen.co.uk/" />

</ruleset>
