<ruleset name="PGP">
  <target host="pgp.com" />
  <target host="*.pgp.com" />
  <target host="*.store.pgp.com" />

  <rule from="^http://(?:www\.)?pgp\.com/" to="https://www.pgp.com/"/>
  <rule from="^http://(keyserver|sstats)\.pgp\.com/" to="https://$1.pgp.com/"/>
  <rule from="^http://([^/:@\.]+)\.store\.pgp\.com/" to="https://$1.store.pgp.com/"/>
</ruleset>
