<ruleset name="LongTail (partial)" platform="mixedcontent">

	<target host="longtailvideo.com"/>
	<target host="dashboard.longtailvideo.com"/>
	<target host="plugins.longtailvideo.com"/>
	<target host="www.longtailvideo.com"/>
	<target host="s0-www.ltvimg.com"/>
	<target host="s1-www.ltvimg.com"/>

	<rule from="^http://(www\.)?longtailvideo\.com/(content|jw)/"
		to="https://www.longtailvideo.com/$2/"/>

	<rule from="^http://(dashboard|plugins)\.longtailvideo\.com/"
		to="https://$1.longtailvideo.com/"/>

	<rule from="^http://s(\d)-www\.ltvimg\.com/"
		to="https://s$1-www.ltvimg.com/"/>

</ruleset>
