<ruleset name="Canonical (partial)" platform="mixedcontent">

	<target host="blog.bazaar.canonical.com"/>
	<target host="www.blog.bazaar.canonical.com"/>
	<target host="shop.canonical.com"/>

	<rule from="^http://(www\.)?blog\.bazaar\.canonical\.com/"
		to="https://blog.bazaar.canonical.com/"/>

	<rule from="^http://shop\.canonical\.com/"
		to="https://shop.canonical.com/"/>

</ruleset>
