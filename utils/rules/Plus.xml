<ruleset name="Plus.net" platform="mixedcontent">
  <target host="plus.net" />
  <target host="www.plus.net" />
  <target host="portal.plus.net" />
  <target host="webmail.plus.net" />
  <target host="community.plus.net" />

  <securecookie host="^(.+\.)?plus\.net$" name=".*"/>

  <rule from="^http://(?:www\.)?plus\.net/" to="https://www.plus.net/"/>
  <rule from="^http://(portal|webmail|community)\.plus\.net/" to="https://$1.plus.net/"/>
</ruleset>

