<ruleset name="Lawrence Livermore National Laboratory">

	<target host="llnl.gov" />
	<target host="*.llnl.gov" />


	<securecookie host="^(.*\.)?llnl\.gov$" name=".*" />


	<!--	Observed subdomains:

			- careers
			- computing
			- missions
			- newsline
			- postdocs
			- protocol
			- publicaffairs
			- st
			- wci
			- www
			- www-envirinfo
					-->
	<rule from="^http://([\w\-]+\.)?llnl\.gov/"
		to="https://$1llnl.gov/" />

</ruleset>
