<ruleset name="Bidz.com (partial)" platform="mixedcontent">

	<target host="bidz.com"/>
	<target host="*.bidz.com"/>
		<exclusion pattern="^http://blog\."/>

	<securecookie host=".*bidz\.com$" name=".*"/>

	<rule from="^http://bidz\.com/"
		to="https://www.bidz.com/"/>

	<rule from="^http://(\w+)\.bidz\.com/"
		to="https://$1.bidz.com/"/>

</ruleset>
