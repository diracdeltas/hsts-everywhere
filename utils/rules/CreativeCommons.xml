<ruleset name="Creative Commons">
  <target host="i.creativecommons.org" />
  <target host="api.creativecommons.org" />
  <target host="creativecommons.org" />
  <target host="creativecommons.net" />

  <rule from="^http://(i|api)\.creativecommons\.org/" to="https://$1.creativecommons.org/"/>
  <rule from="^http://creativecommons\.org/" to="https://creativecommons.org/"/>
  <rule from="^http://creativecommons\.net/" to="https://creativecommons.net/"/>
</ruleset>
