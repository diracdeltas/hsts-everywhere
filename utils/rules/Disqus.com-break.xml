<!--	With this enabled, some buttons in the Disqus interface break.
-->
<ruleset name="Disqus (break buttons)" default_off="breaks buttons">

	<target host="mediacdn.disqus.com"/>

	<rule from="^http://mediacdn\.disqus\.com/(\d+)/build/system/embed\.js"
		to="https://securecdn.disqus.com/$1/build/system/embed.js"/>

</ruleset>

