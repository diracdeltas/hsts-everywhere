<ruleset name="LegitScript">
  <target host="www.legitscript.com" />
  <target host="legitscript.com" />
  <target host="secure.legitscript.com" />

  <rule from="^http://(?:www\.)?legitscript\.com/" to="https://www.legitscript.com/"/>
  <rule from="^http://secure\.legitscript\.com/" to="https://secure.legitscript.com/"/>
</ruleset>
