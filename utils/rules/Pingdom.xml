<ruleset name="Pingdom (partial)">

	<target host="pingdom.com"/>
	<target host="*.pingdom.com"/>
		<!--	404	-->
		<exclusion pattern="^http://stats\."/>


	<rule from="^http://(pp\.)?pingdom\.com/"
		to="https://$1pingdom.com/"/>

	<rule from="^http://www\.pingdom\.com/(_css/|_img/|signup)"
		to="https://www.pingdom.com/$1"/>

</ruleset>
