	<rule from="^http://(community|cookbooks|edexchange|cem\.events|fpdownload|get|kuler|www)\.adobe\.com/"
		to="https://$1.adobe.com/" />

	<rule from="^https?://wwwimages\.adobe\.com/www\.adobe\.com/"
