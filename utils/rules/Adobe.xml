	<rule from="^http://typekit\.com/"
		to="https://typekit.com/" />

	<rule from="^http://use\.typekit\.(com|net)/"
		to="https://use.typekit.$1/" />

	<rule from="^http://worldsecuresystems\.com/"
		to="https://worldsecuresystems.com/" />

