	<rule from="^https?://(?:www\.)?omniture-static\.com/"
		to="https://www.omniture-static.com/" />

	<rule from="^http://(\w+)\.tt\.omtrdc\.net/"
		to="https://$1.tt.omtrdc.net/" />

	<!--	!www cert: www1.scene7.com	-->
	<rule from="^https?://(?:www(1)?\.)?scene7\.com/"
