<ruleset name="iPage" platform="mixedcontent">

	<target host="ipage.com"/>
	<target host="secure.ipage.com"/>
	<target host="www.ipage.com"/>

	<rule from="^http://ipage\.com/"
		to="https://www.ipage.com/"/>

	<rule from="^http://(secure|www)\.ipage\.com/"
		to="https://$1.ipage.com/"/>

	<securecookie host="^\.ipage\.com$" name=".*"/>

</ruleset>
