<ruleset name="Zoho">

	<target host="*.zoho.com" />
	<target host="*.zohostatic.com"/>

	<securecookie host=".*\.zoho\.com$" name=".*"/>

	<rule from="^http://(assist|business|chat|creator|discussions|docs|invoice|mail|meeting|notebook|personal|planner|projects|recruit|reports|people|search|share|sheet|show|wiki|writer|www)\.zoho\.com/"
		to="https://$1.zoho.com/"/>

	<rule from="^http://(\w+)\.zohostatic\.com/"
		to="https://$1.zohostatic.com/"/>
</ruleset>
